name: TX Engine Autopilot (Stable In-Repo Engine)

on:
  workflow_dispatch:
  push:
    paths:
      - "K線西遊記/kline-taifex/master/台指近全.xlsx"
      - "K線西遊記/engine-v1.0/**"
      - ".github/workflows/engine_autopilot.yml"

permissions:
  contents: write

jobs:
  run-engine:
    runs-on: ubuntu-latest

    env:
      MASTER_XLSX: "K線西遊記/kline-taifex/master/台指近全.xlsx"
      ENGINE_ENTRY: "K線西遊記/engine-v1.0/K線西遊記_Tplus1_pm500_step1_多空運算_V3.4.3_UTF8_NO_BOM.py"
      OUTDIR: "K線西遊記/kline-engine-public/output"

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          set -e
          python -m pip install -U pip
          pip install -r "K線西遊記/engine-v1.0/requirements.txt"

      - name: Run TX Engine
        run: |
          set -e
          test -f "${MASTER_XLSX}" || (echo "MASTER not found" && exit 1)
          mkdir -p "${OUTDIR}"

          python "${ENGINE_ENTRY}" \
            --input "${MASTER_XLSX}" \
            --outdir "${OUTDIR}"

      - name: Commit output
        run: |
          set -e
          git config user.name "kline-autopilot"
          git config user.email "bot@kline.odyssey"

          git add "${OUTDIR}" || true
          if git diff --cached --quiet; then
            echo "No changes."
            exit 0
          fi

          git commit -m "auto: TX engine output update"
          git push
